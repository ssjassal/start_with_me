<!DOCTYPE html>
<html>
	<head>
		<% include ../../partials/head %>
	</head>
	<body>
		<header>
			<h1>Create an Task</h1>
			<nav>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/tasks">Tasks Index</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			<form action="/tasks" method="post">
				<select name="userId">
                 <% for(var i = 0; i < users.length; i++) { %>
                     <option value="<%=users[i]._id%>"><%=users[i].name%></option>
                 <% } %>
          	</select><br/>
				<input type="text" name="title" placeholder="Task Title"/><br>
				<textarea name="desc" placeholder="Task Description"></textarea><br/>
				<input type="text" name="location" placeholder="Location"/><br>
				<input type="text" name="points" placeholder="Points Value"/><br>
				<input type="text" name="taskImg" placeholder="Image URL"/><br>
				<input type="submit" value="Publish Task"/>
			</form>
		</main>
	</body>
	<footer>
		<% include ../../partials/footer %>
	</footer>
</html>
