<!DOCTYPE html>
<html>
	<head>
		<% include ../../partials/head %>
	</head>
	<body>
		<header>
			<h1>Profile for <%=currentUser.name%></h1>
			<nav>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/users">User Index</a>
					</li>
				</ul>
			</nav>
		</header>
		<main>
			<section>
				<h2>User Attributes:</h2>
				<img src="<%=currentUser.userImg%>"/></img><br>
				<ul>
					<li>Name: <%=currentUser.name%></li>
				</ul>
			</section>
			<section>
				<h2>Tasks Entered By This User:</h2>
				<ul>
					<% for(var i = 0; i < currentUser.tasks.length; i++){ %>
						<li><a href="/tasks/<%=currentUser.tasks[i]._id%>"><%=currentUser.tasks[i].title%></a></li>
					<% } %>
				</ul>
			</section>
			<section>
				<a href="/users/<%=currentUser._id%>/edit">Edit</a>
			</section>
            <section>
				<form action="/users/<%=currentUser._id%>?_method=DELETE" method="post">
					<input type="submit" value="Delete User"/>
				</form>
			</section>
		</main>
	</body>
	<footer>
		<% include ../../partials/footer %>
	</footer>
</html>
